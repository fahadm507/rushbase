  <% @followers.each do |user| %>
    <div class="row">
      <div class"user-avatar"><%= image_tag user.avatar.url(:thumb), :class => "img-circle col-md-2 col-sm-4 col-xs-6"%></div>
      <ul class="col-md-3 col-sm-3 col-xs-6">
        <li><%= user.email %></li>
        <%= link_to 'view', user, class: "btn btn-primary btn-lg" %>
        <%= render partial: 'follows/follow', locals: { user: user} %>
      </ul>
    </div>
    <hr>
  <% end %>
</div>
