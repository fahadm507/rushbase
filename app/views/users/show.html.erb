<div class="container-fluid">
  <div class="">
    <% @user ||= current_user %>
    <span ng-init="currentUser = <%= @user.id %>"></span>
    <div class="row user-info-section">
      <div class="user-info row">
        <div class="main-profile text-center col-md-8">
          <div class" col-md-3 col-sm-6 col-xs-12"><%= image_tag @user.avatar.url(:thumb), :class => "img-circle"%>
          </div>
          <h3 class="user-name"><%= @user.full_name %></h3>
          <p>Computer software</p>
          <p>Boston, MA</p>
        </div>
        <div class="col-md-4 user-stat-1">
          <div class="row">
            <div class="col-md-6 item" id="followers">
              <div class="row">
                <p class="numbers"><span class="label label-default ">250</span>
              </div>
              <div class="row">
                <h1 class="text">Followers</h1>
              </div>
            </div>
            <div class="col-md-6 item" id="following">
              <div class="row">
                <p class="numbers"><span class="label label-default ">124</span></p>
              </div>
              <div class="row">
                <h1 class="text">Following</h1>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 special-item">
              <div class="content2 col-md-12">
                <div class="row">
                  <p class="numbers"><span class="label label-success ">300</span></p>
                </div>
                <div class="row">
                  <h1 class="text">Contributions</h1>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="education-info-section col-md-8">
        <div class="current-courses item col-md-12">
          <div ng-controller="CurrentCourseController">
            <div class="col-md-6" ng-repeat="course in currentCourses">
              <li>{{course.name}}</li>
            </div>
            <div id="new-current-course" class="col-md-6">
              <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">Add a course </button>

              <%= render partial: 'current_courses/new'%>
            </div>
          </div>
        </div>
        <div class="previous-courses item col-md-12" id="basicModal">
          <h4>Previous Courses</h4>
        </div>
        <div class="education-history item col-md-12">
          <h3>Education</h3>
          <p>Degree/certificates</p>
          <p>key courses</p>
        </div>
        <div class="favorite-resourses item col-md-12">
          <h3>Learning Resources</h3>
          <ul>
          <li>kdfklsjflsjflkjs</li>
          </ul>
        </div>
      </div>
    </div>


  </div>
</div>
