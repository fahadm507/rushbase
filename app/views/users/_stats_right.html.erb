<div class="col-md-4 user-stat-1">
  <div class="row">
    <div class="col-md-6 item" id="followers">
      <div class="row">
        <p class="numbers"><span class="label label-default ">
        <%= link_to user.followers.count, followers_user_path(user) %></span>
      </div>
      <div class="row">
        <h1 class="text">Followers</h1>
      </div>
    </div>
    <div class="col-md-6 item" id="following">
      <div class="row">
        <p class="numbers"><span class="label label-default ">
        <%=link_to user.following_users.count, following_user_path(user)%></span></p>
      </div>
      <div class="row">
        <h1 class="text">Following</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 special-item">
      <div class="content2 col-md-12">
        <div class="row">
          <p class="numbers"><span class="label label-success ">
            <%=link_to user.user_posts.count, user_posts_path(user)%>
          </span></p>
        </div>
        <div class="row">
          <h1 class="text">Posts</h1>
        </div>
      </div>
    </div>
  </div>
</div>
