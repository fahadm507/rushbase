<%if post.post_comments.any?%>
  <div class="comments-details row">
    <ul id="comment-for-post-<%= post.id %>">
      <% post.post_comments.each do |comment| %>
        <li id="comment-<%= comment.id %>" class="acomment">
          <div class="row">
            <div class="commenter-image col-md-3 text-center">
              <%=link_to (image_tag comment.user.avatar.url(:thumb), class: "img-circle ", size:'40x40'), user_path(comment.user) %>
              <%=link_to "#{comment.user.full_name}", user_path(user), class: "row" %>
            </div>
            <div class="col-md-8">

            <div class="row time"><%=comment.created_at.strftime("%B %d, %Y, %I:%M %p ") %></div>
             <div class="description row"><%=comment.body%></div>
            </div>
          </div>
        </li>
          <hr>
      <%end%>
    </ul>
  </div>
<%end%>
