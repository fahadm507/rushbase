<div class="comments row">
  <%= bootstrap_form_for [user_post, PostComment.new], remote: true,  html: {class: 'comment-form'} do |f| %>
  <div class="commenting">
    <div class="input-append pull-left col-md-8">
      <%= f.text_field :body, hide_label: true, size: "",required: true, placeholder: "Add a comment here" %>
    </div>
    <div class="button pull-left">
      <%= f.submit "Comment", class: "comment_button btn btn-default btn-large", size: '10x10' %>
    </div>
  </div>
  <%end%>
</div>
