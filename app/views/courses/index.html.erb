<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, organization_course_path(course.instructor.organization, course) %></td>
        <td><%= link_to 'Edit', edit_organization_course_path(course.instructor.organization, course) %></td>
        <td><%= link_to 'Destroy', organization_course_path(course.instructor.organization, course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_organization_course_path %>
