<li id="comment-<%= comment.id %>" class="acomment">
  <div class="row">
  <div class="col-md-10">
    <div class="pull-left block commenter-image circle">
      <%=link_to (image_tag comment.user.avatar.url(:thumb), class: "img-circle ", size:'40x40'), user_path(comment.user) %>
    </div>
    <span><%=link_to "#{comment.user.full_name}", user_path(user), class: "row" %></span>
    </div>
    <% if comment.user == current_user %>
      <div class="col-md-2 col-sm-6 col-xs-12 text-center comment-actions">
        <%=link_to "", edit_user_post_post_comment_path(comment.user_post, comment),remote: true, class: "fa fa-pencil fa-fw", title: "delete comment" %>
        <%=link_to "", user_post_post_comment_path(comment.user_post, comment.id), remote: true,  method: :delete, data: {confirm: "Are you sure you want delete this comment?"}, class: "fa fa-trash error alert", title: "delete comment" %>
      </div>
    <%end%>
    <div class="col-md-12 pull-left">
       <div class="description row"><%=comment.body%></div>
       <div class="time">
          <%= timeago_tag comment.created_at, :nojs => true, :limit => 30.days.ago %>
        </div>
    </div>
  </div>
  <hr>
</li>
