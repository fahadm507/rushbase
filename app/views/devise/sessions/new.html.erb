<div class="container">
    <div class="row">
      <section class="col-md-8 col-md-offset-2 reg-form panel panel-default text-center">
        <h4 class="text-center">Please Sign In </h4>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal panel-body'}) do |f| %>
        <div class="form-group">
            <%= f.label :email, class: "col-sm-3 control-label" %>
            <div class="col-sm-6 col-xs-12">
              <%= f.email_field :email,hide_label: true, required: true, class: "form-control"%>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :password, class: "col-sm-3 control-label" %>
            <div class="col-sm-6 col-xs-12">
              <%= f.password_field :password, required:true,  hide_label:true, autocomplete: "off", class: "form-control" %>
            </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-2">
                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            </div>
        </div>
        <% end -%>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-6">
            <%= f.submit "Sign in", class: "btn btn-success btn-signup col-sm-11 col-xs-11 col-sm-offset-2 text-center" %>
            <div class="row separator"><span class="text-center col-md-12 col-sm-12 col-xs-12">-- OR --</span></div>
        </div>

        <div class="col-sm-offset-2 col-sm-6">
          <%= link_to(user_omniauth_authorize_path(:facebook), class: "btn btn-primary fb-btn col-sm-11 col-xs-11 col-sm-offset-2 text-center" ) do %>
            <i class="fa fa-facebook-square"></i><span>Sign in with Facebook</span>
          <%end%>
        </div>
      </div>
        <% end %>
      </section>
    </div>
</div>
