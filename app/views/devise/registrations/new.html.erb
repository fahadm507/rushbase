<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 reg-form panel panel-default text-center">
      <h4 class="text-center">Please Sign Up</h4>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal panel-content'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :full_name, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :full_name, hide_label:true,required: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :industry, class: "col-sm-3 col-xs-12 control-label" %>
        <%= f.collection_select(:industry_id, Industry.all, :id, :name, {include_blank: "-- Please select your industry or major --", hide_label: true}, required: true, class: "col-sm-6 text-center") %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 control-label" %>
        <div class="col-sm-6 col-xs-12">
          <%= f.email_field :email,hide_label: true, required: true, class: "form-control"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-3 control-label" %>
        <div class="col-sm-6 col-xs-12">
          <%= f.password_field :password, required:true,  hide_label:true, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
          <%= f.submit "Sign up", class: "btn btn-success btn-signup col-sm-11 col-xs-11 col-sm-offset-2 text-center" %>
           <div class="text-center separator">-- OR --</div>
        </div>

        <div class="col-sm-offset-2 col-sm-6">
          <%= link_to(user_omniauth_authorize_path(:facebook), class: "btn btn-primary fb-btn col-sm-11 col-xs-11 col-sm-offset-2 text-center" ) do %>
            <i class="fa fa-facebook-square"></i><span>Sign in with Facebook</span>
          <%end%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
          <span>Already a member?</span> <%= render "devise/shared/links" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

