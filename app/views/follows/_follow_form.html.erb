<div>
  <% if current_user.following?(user)%>
    <div class="following-partial">
    <%= bootstrap_form_for(current_user.follows.find_by(followable_id: user.id), html: {method: :delete}, remote: true ) do |f| %>
    <%= f.submit "following", class: " following-btn btn btn-success" %>
    <%end%>
  </div>
  <%else%>
    <div class="follow-partial">
    <%= form_for(current_user.follows.build, remote: true) do |f| %>
    <div><%= hidden_field :user_id, user.id %></div>
      <%= f.submit "Follow", class: " btn btn-primary follow-btn" %>
    <% end %>
    </div>
  <%end%>
</div>

